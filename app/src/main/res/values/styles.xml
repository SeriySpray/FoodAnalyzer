<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.FoodAnalyzer" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_light</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSurface">@color/gray_dark</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_text</item>
    </style>

    <style name="Theme.FoodAnalyzer" parent="Base.Theme.FoodAnalyzer" />

    <!-- Calendar styles -->
    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.FoodAnalyzer.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Widget.FoodAnalyzer.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.FoodAnalyzer.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/gray_dark</item>
    </style>

    <!-- Text input styles -->
    <style name="Widget.FoodAnalyzer.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/gray_medium</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/gray_text</item>
        <item name="android:textColorHint">@color/gray_text</item>
    </style>

    <!-- Toolbar styles -->
    <style name="Widget.FoodAnalyzer.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Dialog styles -->
    <style name="ThemeOverlay.FoodAnalyzer.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowBackground">@color/gray_dark</item>
        <item name="colorSurface">@color/gray_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>